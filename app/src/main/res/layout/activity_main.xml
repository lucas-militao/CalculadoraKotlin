<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="6"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtViewResultado"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text=""
        android:maxLines="1"
        android:textSize="50dp"
        android:gravity="end">
    </TextView>

    <TextView
        android:id="@+id/txtViewVisor"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text=""
        android:textSize="50dp"
        android:maxLines="1"
        android:gravity="end">
    </TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/buttom_nove"
            android:text="9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttom_oito"
            android:text="8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttom_sete"
            android:text="7"
            android:textSize="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttom_dividir"
            android:text="/"
            android:textSize="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/buttom_seis"
            android:text="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttom_cinco"
            android:text="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttom_quatro"
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttom_multiplica"
            android:text="X"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/buttom_tres"
            android:text="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttom_dois"
            android:text="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttom_um"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttom_subtrair"
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/buttom_zero"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttom_cancel"
            android:text="C"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttom_igual"
            android:text="="
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttom_somar"
            android:text="+"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="40dp"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>